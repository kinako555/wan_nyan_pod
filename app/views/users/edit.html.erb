<h1>プロフィール設定</h1>
<div class="row justify-content-center">
    <div class="col-md-6">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <!-- アイコン開始 -->
            <div class="field image">
                <i class="far fa-check-square"></i>
                <div id="img_field" onClick="$('#icon').click()" >
                　　<% if @user.icon.url.present? %>
                　　　<%= image_tag @user.icon.url %>
                　　<% else %>
                　　　<i class="fas fa-image"></i><i class="fas fa-file-upload add"></i>
                　　<% end %>
            　  </div>
                <%= f.file_field :icon, class: "image", style: "display:none;", id: "icon"%>
            </div>
            <!--アイコン終わり -->
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>

            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>

            <%= f.submit "更新", class: "btn btn-primary" %>
            
        <% end %>
    </div>
</div>
<%= render 'icon_editter_modal' %>

<%= javascript_include_tag 'cropper.min' %>