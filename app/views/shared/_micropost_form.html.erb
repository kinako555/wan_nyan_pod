<%= form_for(@micropost) do |form| %>
  <%= render 'shared/error_messages', object: form.object %>
  <div class="field">
    <%= form.text_area :content, rows: 12, placeholder: "ぷりーず" %>
    <%= form.label :pictures %>
    <label class="pictures_field"></label>
    <%= form.file_field :pictures, multiple: true, class: "file-input" %>
  </div>
  <%= form.submit "投稿", class: "btn btn-primary" %>
<% end %>