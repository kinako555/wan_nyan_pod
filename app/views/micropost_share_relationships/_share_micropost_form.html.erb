<span class="share_micropost_form">
    <% if current_user.sharering_micropost?(micropost) %>
        <%= render 'micropost_share_relationships/unshare_micropost', { micropost: micropost } %>
    <% else %>   
        <%= render 'micropost_share_relationships/share_micropost', { micropost: micropost } %>
    <% end %>
</span>
